<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rlTilte"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="120dp" >

    <ImageView
        android:id="@+id/ivDts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dts"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="SQLite Demo 01"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="VSGA Tahap II"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    </RelativeLayout>

    <Button
        android:id="@+id/btUpgrade"
        android:text="Upgrade Database"
        android:layout_below="@id/rlTilte"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@id/btInsert"
        android:text="Insert A Friend"
        android:layout_below="@id/btUpgrade"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />



    <EditText
        android:id="@+id/etID"
        android:hint="Friend ID"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btGetAllFriend"
        android:layout_marginTop="4dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/btUpdate"
        android:layout_below="@+id/etID"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Friend"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btDelete"
        android:layout_below="@+id/btUpdate"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete A Friend"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btGetAFriend"
        android:layout_below="@+id/btDelete"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get A Friend"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btGetAllFriend"
        android:layout_below="@+id/btInsert"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get All Friend"
        tools:ignore="HardcodedText" />

</RelativeLayout>


